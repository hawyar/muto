{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "composite": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./types",
    "target": "es6",
    "strict": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "compileOnSave": true,
  "files": [
    "./package.json"
  ],
  "include": [
    "./lib/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "test",
    "docs",
    ".parcel-cache"
  ]
}
